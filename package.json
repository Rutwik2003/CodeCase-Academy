{
  "name": "codecase-detective-academy",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Learn HTML & CSS by solving detective mysteries. Interactive coding education platform.",
  "keywords": [
    "HTML",
    "CSS",
    "JavaScript",
    "coding education",
    "detective games",
    "web development",
    "interactive learning",
    "programming tutorial"
  ],
  "author": "CodeCase Detective Academy",
  "license": "MIT",
  "homepage": "https://codecase.rutwikdev.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/codecase-detective-academy.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run security-check && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:prod": "npm run security-check && npm run build && npm run optimize",
    "optimize": "npm run compress && npm run generate-sitemap",
    "compress": "node scripts/compress-assets.js",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "deploy": "npm run build:prod && vercel --prod",
    "deploy:preview": "npm run build && vercel",
    "validate-env": "node tools/validate-env.mjs",
    "security-check": "node tools/security-scan.js",
    "setup-domain": "npm run validate-env && echo 'Domain setup validation complete for codecase.rutwikdev.com'",
    "test:referrals": "node tools/testing/test_referral_system.js",
    "debug:users": "node tools/debug/fix_existing_users.js",
    "debug:referrals": "node tools/debug/check_referral_data.js",
    "optimize:images": "powershell -ExecutionPolicy Bypass -File scripts/optimize-images.ps1",
    "analyze:bundle": "npm run build && npx vite-bundle-analyzer dist",
    "performance:test": "npm run build && npm run preview",
    "vercel:deploy": "vercel --prod",
    "vercel:preview": "vercel"
  },
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.6.0",
    "@monaco-editor/react": "^4.7.0",
    "@types/react-router-dom": "^5.3.3",
    "dotenv": "^17.2.1",
    "firebase": "^11.10.0",
    "framer-motion": "^12.23.0",
    "lucide-react": "^0.344.0",
    "monaco-editor": "^0.52.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "react-loader-spinner": "^6.1.6",
    "react-router-dom": "^7.7.1",
    "vite-plugin-pwa": "^1.0.2",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.0.2"
  }
}
